{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "anyOf": [
        {
            "$ref": "#/definitions/Square"
        },
        {
            "$ref": "#/definitions/Rectangle"
        },
        {
            "$ref": "#/definitions/Circle"
        }
    ],
    "definitions": {
        "Circle": {
            "additionalProperties": false,
            "properties": {
                "kind": {
                    "enum": [
                        "circle"
                    ],
                    "type": "string"
                },
                "radius": {
                    "type": "number"
                }
            },
            "required": [
                "kind",
                "radius"
            ],
            "type": "object"
        },
        "Rectangle": {
            "additionalProperties": false,
            "properties": {
                "height": {
                    "type": "number"
                },
                "kind": {
                    "enum": [
                        "rectangle"
                    ],
                    "type": "string"
                },
                "width": {
                    "type": "number"
                }
            },
            "required": [
                "height",
                "kind",
                "width"
            ],
            "type": "object"
        },
        "Square": {
            "additionalProperties": false,
            "properties": {
                "kind": {
                    "enum": [
                        "square"
                    ],
                    "type": "string"
                },
                "size": {
                    "type": "number"
                }
            },
            "required": [
                "kind",
                "size"
            ],
            "type": "object"
        }
    }
}

